{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Prompt Artifact Schema",
  "description": "Schema for validating prompt artifacts in the Pepperpy Hub",
  "type": "object",
  "required": ["name", "version", "content"],
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the prompt",
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "version": {
      "type": "string",
      "description": "The version of the prompt",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "content": {
      "type": "object",
      "description": "The prompt configuration and templates",
      "required": ["description", "templates", "variables"],
      "properties": {
        "description": {
          "type": "string",
          "description": "A detailed description of what the prompt does"
        },
        "templates": {
          "type": "object",
          "description": "Collection of prompt templates",
          "additionalProperties": {
            "type": "object",
            "required": ["content", "description"],
            "properties": {
              "content": {
                "type": "string",
                "description": "The prompt template text with variable placeholders"
              },
              "description": {
                "type": "string",
                "description": "Description of this template variant"
              },
              "model": {
                "type": "string",
                "description": "Specific model this template is optimized for"
              },
              "temperature": {
                "type": "number",
                "description": "Recommended temperature setting",
                "minimum": 0,
                "maximum": 2
              },
              "max_tokens": {
                "type": "integer",
                "description": "Recommended maximum tokens",
                "minimum": 1
              },
              "stop_sequences": {
                "type": "array",
                "description": "Recommended stop sequences",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        },
        "variables": {
          "type": "object",
          "description": "Variable definitions for the templates",
          "additionalProperties": {
            "type": "object",
            "required": ["type", "description"],
            "properties": {
              "type": {
                "type": "string",
                "description": "The variable type",
                "enum": ["string", "number", "integer", "boolean", "array", "object"]
              },
              "description": {
                "type": "string",
                "description": "Description of the variable"
              },
              "required": {
                "type": "boolean",
                "description": "Whether the variable is required",
                "default": true
              },
              "default": {
                "description": "Default value for the variable"
              },
              "examples": {
                "type": "array",
                "description": "Example values",
                "items": {}
              }
            }
          }
        },
        "examples": {
          "type": "array",
          "description": "Example usage of the prompt",
          "items": {
            "type": "object",
            "required": ["template", "variables", "output", "description"],
            "properties": {
              "template": {
                "type": "string",
                "description": "Name of the template used"
              },
              "variables": {
                "type": "object",
                "description": "Example variable values"
              },
              "output": {
                "type": "string",
                "description": "Example model output"
              },
              "description": {
                "type": "string",
                "description": "Description of the example"
              }
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata about the prompt",
      "properties": {
        "author": {
          "type": "string"
        },
        "license": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "use_cases": {
          "type": "array",
          "description": "Intended use cases",
          "items": {
            "type": "string"
          }
        },
        "limitations": {
          "type": "array",
          "description": "Known limitations",
          "items": {
            "type": "string"
          }
        },
        "models": {
          "type": "array",
          "description": "Compatible models",
          "items": {
            "type": "string"
          }
        },
        "performance": {
          "type": "object",
          "description": "Performance characteristics",
          "properties": {
            "average_tokens": {
              "type": "integer",
              "description": "Average number of tokens used"
            },
            "average_latency": {
              "type": "string",
              "description": "Average response time"
            },
            "success_rate": {
              "type": "number",
              "description": "Success rate of the prompt",
              "minimum": 0,
              "maximum": 1
            }
          }
        }
      }
    }
  }
} 