{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Capability Artifact Schema",
  "description": "Schema for capability artifacts in the Pepperpy Hub",
  "type": "object",
  "required": [
    "name",
    "version",
    "description",
    "author",
    "interface",
    "providers"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the capability",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "minLength": 3,
      "maxLength": 64
    },
    "version": {
      "type": "string",
      "description": "Version of the capability (semver)",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "description": {
      "type": "string",
      "description": "Description of the capability's purpose and functionality"
    },
    "author": {
      "type": "object",
      "required": ["name", "email"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Author's name"
        },
        "email": {
          "type": "string",
          "description": "Author's email",
          "format": "email"
        },
        "organization": {
          "type": "string",
          "description": "Optional organization name"
        }
      }
    },
    "interface": {
      "type": "object",
      "description": "Capability interface definition",
      "required": ["methods"],
      "properties": {
        "methods": {
          "type": "object",
          "description": "Method definitions",
          "additionalProperties": {
            "type": "object",
            "required": ["description", "parameters", "returns"],
            "properties": {
              "description": {
                "type": "string",
                "description": "Method description"
              },
              "parameters": {
                "type": "object",
                "description": "Method parameters",
                "additionalProperties": {
                  "type": "object",
                  "required": ["type", "description"],
                  "properties": {
                    "type": {
                      "type": "string",
                      "description": "Parameter type"
                    },
                    "description": {
                      "type": "string",
                      "description": "Parameter description"
                    },
                    "required": {
                      "type": "boolean",
                      "description": "Whether the parameter is required",
                      "default": true
                    }
                  }
                }
              },
              "returns": {
                "type": "object",
                "description": "Return value definition",
                "required": ["type", "description"],
                "properties": {
                  "type": {
                    "type": "string",
                    "description": "Return type"
                  },
                  "description": {
                    "type": "string",
                    "description": "Return value description"
                  }
                }
              },
              "raises": {
                "type": "array",
                "description": "Exceptions that may be raised",
                "items": {
                  "type": "object",
                  "required": ["type", "description"],
                  "properties": {
                    "type": {
                      "type": "string",
                      "description": "Exception type"
                    },
                    "description": {
                      "type": "string",
                      "description": "Exception description"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "providers": {
      "type": "array",
      "description": "Available providers for this capability",
      "items": {
        "type": "object",
        "required": ["name", "type", "version"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Provider name"
          },
          "type": {
            "type": "string",
            "description": "Provider type"
          },
          "version": {
            "type": "string",
            "description": "Provider version",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
          },
          "configuration": {
            "type": "object",
            "description": "Provider configuration schema",
            "additionalProperties": true
          }
        }
      }
    },
    "dependencies": {
      "type": "object",
      "description": "Capability dependencies",
      "properties": {
        "capabilities": {
          "type": "array",
          "description": "Required capabilities",
          "items": {
            "type": "object",
            "required": ["name", "version"],
            "properties": {
              "name": {
                "type": "string",
                "description": "Capability name"
              },
              "version": {
                "type": "string",
                "description": "Required version",
                "pattern": "^\\d+\\.\\d+\\.\\d+$"
              }
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata",
      "additionalProperties": true
    }
  }
} 