# PepperPy Environment Configuration
# Copy this file to .env and update values as needed

# Application Settings
PEPPERPY_APP__NAME=PepperPy
PEPPERPY_APP__VERSION=0.1.0
PEPPERPY_APP__DEBUG=true

# Security Settings
# Generate a secure key with: openssl rand -hex 32
PEPPERPY_SECURITY__SECRET_KEY=your-secret-key-here
PEPPERPY_SECURITY__API_KEY=your-api-key-here

# Database Settings
# Format: dialect+driver://username:password@host:port/database
PEPPERPY_DATABASE__URL=sqlite+aiosqlite:///pepperpy.db

# Redis Settings (optional)
# Format: redis://username:password@host:port/db
PEPPERPY_REDIS__URL=redis://localhost:6379/0

# Logging Settings
# Levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
PEPPERPY_LOGGING__LEVEL=DEBUG
# Formats: json, console
PEPPERPY_LOGGING__FORMAT=console

# Feature Flags
PEPPERPY_FEATURES__ENABLE_TELEMETRY=false
PEPPERPY_FEATURES__ENABLE_CACHE=true

# CORS Settings (comma-separated list)
PEPPERPY_CORS__ORIGINS=http://localhost:3000

# API Documentation
PEPPERPY_API__DOCS=true

# Development Settings
PEPPERPY_DEV__RELOAD=true

# LLM Configuration
PEPPERPY_LLM__PROVIDER=openrouter
PEPPERPY_LLM__MODEL=openai/gpt-4o-mini
PEPPERPY_LLM__FALLBACK_MODEL=openai/gpt-4
PEPPERPY_LLM__FALLBACK_API_KEY=your-fallback-api-key-here

# RAG Configuration
PEPPERPY_RAG__TEXT_CHUNK_SIZE=1000
PEPPERPY_RAG__TEXT_OVERLAP=100

# Memory Configuration
PEPPERPY_MEMORY__IMPORTANCE_THRESHOLD=0.5
PEPPERPY_MEMORY__MAX_SHORT_TERM_MEMORIES=100

# News API Configuration
PEPPERPY_NEWS__API_KEY=your-newsapi-key-here
PEPPERPY_NEWS__NEWSAPI_API_KEY=your-newsapi-key-here
PEPPERPY_NEWS__FINLIGHT_API_KEY=your-finlight-key-here

# OpenRouter Configuration
PEPPERPY_LLM__OPENROUTER_API_KEY=your-openrouter-api-key-here

# TTS Configuration
PEPPERPY_TTS__PROVIDER=murf
PEPPERPY_TTS__API_KEY=your-tts-api-key-here
PEPPERPY_TTS__MURF_API_KEY=your-murf-api-key-here

# OpenAI Configuration
PEPPERPY_LLM__OPENAI_API_KEY=your-openai-api-key-here

# CrewAI Configuration
PEPPERPY_CREWAI__OPENAI_API_KEY=your-crewai-openai-api-key-here

# Supabase Configuration
SUPABASE_URL=your-supabase-url-here
SUPABASE_KEY=your-supabase-key-here

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# GitHub API Configuration
PEPPERPY_TOOLS__GITHUB_API_KEY=your-github-api-key-here