# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Python files
[*.{py,pyi}]
indent_style = space
indent_size = 4
max_line_length = 88

# Documentation
[*.{md,rst}]
trim_trailing_whitespace = false
max_line_length = 80

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2
end_of_line = lf

# Windows scripts
[*.{cmd,bat,ps1}]
end_of_line = crlf

# Configuration files
[*.{ini,cfg,conf}]
indent_style = space
indent_size = 4

# Makefile requires tabs
[Makefile]
indent_style = tab

# TOML files
[*.toml]
indent_style = space
indent_size = 4 