---
title: Testing Guidelines
description: ALWAYS ensure tests follow naming conventions and cover critical code paths.
globs: "tests/**/*.py"
version: "1.0"
priority: high
---

<?xml version="1.0" encoding="UTF-8"?>
<rule>
  <metadata>
    <name>testing-guidelines</name>
    <description>ALWAYS ensure tests follow naming conventions and cover critical code paths.</description>
    <priority>high</priority>
    <version>1.0</version>
    <tags>
      <tag>testing</tag>
      <tag>coverage</tag>
    </tags>
  </metadata>
  <filters>
    <filter>
      <type>file_name</type>
      <pattern>.*test_.*</pattern>
      <description>Ensures test files start with 'test_'.</description>
    </filter>
  </filters>
  <actions>
    <action>
      <type>reject</type>
      <conditions>
        <condition>
          <pattern>.*def test_.*\(.*\):</pattern>
          <message>All test functions must be prefixed with 'test_'.</message>
        </condition>
      </conditions>
    </action>
  </actions>
</rule>
