---
title: Code Quality Standards
description: ALWAYS ensure code is clean, structured, and free of unused variables or imports.
globs: "src/**/*.py"
version: "1.0"
priority: high
---

<?xml version="1.0" encoding="UTF-8"?>
<rule>
  <metadata>
    <name>code-quality</name>
    <description>ALWAYS ensure code is clean, structured, and free of unused variables or imports.</description>
    <priority>high</priority>
    <version>1.0</version>
    <tags>
      <tag>code-quality</tag>
      <tag>best-practices</tag>
    </tags>
  </metadata>
  <filters>
    <filter>
      <type>code</type>
      <pattern>import \w+\n\n</pattern>
      <description>Detects unused imports.</description>
    </filter>
  </filters>
  <actions>
    <action>
      <type>reject</type>
      <conditions>
        <condition>
          <pattern>import \w+\n\n</pattern>
          <message>Unused import detected. Remove it.</message>
        </condition>
      </conditions>
    </action>
  </actions>
</rule>
