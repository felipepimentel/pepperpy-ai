---
title: Dependency Management
description: ALWAYS use explicit versioning and avoid unnecessary dependencies.
globs: "pyproject.toml"
version: "1.0"
priority: medium
---

<?xml version="1.0" encoding="UTF-8"?>
<rule>
  <metadata>
    <name>dependency-management</name>
    <description>ALWAYS use explicit versioning and avoid unnecessary dependencies.</description>
    <priority>medium</priority>
    <version>1.0</version>
    <tags>
      <tag>dependencies</tag>
      <tag>package-management</tag>
    </tags>
  </metadata>
  <filters>
    <filter>
      <type>file_content</type>
      <pattern>.*==\d+\.\d+\.\d+</pattern>
      <description>Ensure dependencies have explicit versioning.</description>
    </filter>
  </filters>
  <actions>
    <action>
      <type>reject</type>
      <conditions>
        <condition>
          <pattern>.*\*.*</pattern>
          <message>Wildcard dependencies are not allowed. Use explicit versioning.</message>
        </condition>
      </conditions>
    </action>
  </actions>
</rule>
